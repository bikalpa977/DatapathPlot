<Window x:Class="PathdataPlot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathdataPlot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer Margin="20,20,20,20" Background="Aqua" SnapsToDevicePixels="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid  Width="48in" Height="36in"  Margin="100,100,100,100" x:Name="grid">
                <Canvas Background="Beige" x:Name="Mycanvas" MouseDown="canvas_MouseDown">
                   
                </Canvas>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
